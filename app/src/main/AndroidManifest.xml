<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.systems.app">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/favicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AAHAARAPP"
        tools:ignore="AllowBackup">
        <activity android:name="com.systems.app.UserdataActivity"></activity>
        <activity android:name="com.systems.app.controllers.History" />
        <activity android:name="com.systems.app.controllers.About" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBtAubRGSlTZanGLTPT3JrKWsRCFAXZzrE" />

        <activity android:name="com.systems.app.controllers.Receive" />
        <activity android:name="com.systems.app.controllers.Contact" />
        <activity android:name="com.systems.app.controllers.authorization.Signup" />
        <activity android:name="com.systems.app.controllers.authorization.Logup" />
        <activity android:name="com.systems.app.controllers.MainActivity" />
        <activity android:name="com.systems.app.controllers.Donate" />
        <activity android:name="com.systems.app.controllers.landingpage" />
        <activity
            android:name="com.systems.app.controllers.SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>